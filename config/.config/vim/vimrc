set nocompatible

filetype plugin indent on " Activates indenting for files
syntax enable             " Syntax highlighting

" General
set encoding=utf8         " Non-ASCII characters are encoded using UTF-8 by default
set number                " Show line numbers
set ruler                 " Show the cursor position all the time
set t_Co=256

" Search
set ignorecase            " Search commands are case-insensitive
set incsearch             " While typing a search command, show matches incrementally
set nohlsearch            " Don't continue to highlight searched phrases
set smartcase             " If there are uppercase letters, become case-sensitive

" Tabs
set autoindent            " Copy indent from the current line when starting a new line
set expandtab             " Use spaces instead of tabs
set nowrap                " Don't wrap text
set softtabstop=2         " Unify
set shiftround            " Always indent/outdent to the nearest tabstop
set shiftwidth=2          " Pressing >> or << in normal mode indents by 2 characters
set tabstop=2             " Indent/outdent by 2 columns
